page {
  min-height: 100vh;
}
.page {
  padding: 20rpx 4%;
  margin-top: 30%;
}
.logo {
  margin-bottom: 160rpx;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 2.6em;
  line-height: 2.6em;
  color: #3072f6;
  font-weight: 600;
}
.logo text {
  font-size: 1.4em;
  margin-right: .5em;
}

.login-select button {
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 2.6em;
  line-height: 2.6em;
  border-radius: .4em;
}
.login-select button:not(:last-of-type) {
  margin-bottom: 1.5em;
}

.login-select .wechat-login {
  background-color: #3072f6;
  color: #fff;
}
.login-select .phone-login {
  background-color: transparent;
  color: #666;
  border: 1px solid #dadada;
}

.login-select button text {
  font-size: 1.4em;
  margin-right: .5em;
}