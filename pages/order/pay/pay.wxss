.page__hd {
  padding: 60rpx;
}
.page__title {
  text-align: left;
  font-size: 40rpx;
  font-weight: 400;
}
.page__desc {
  font-size: 28rpx;
  text-align: left;
  margin-top: 10rpx;
  color: #888;
}
.weui-check__label {
  display: block;
  justify-content: space-between;
}
.weui-check__label::before,
.weui-check__label::after {
  content: "";
  display: table;
}
.weui-check__label::after {
  clear: both;
}
.weui-cell__bd {
  float: left;
  width: calc(100% - 30px);
}
.weui-cell__bd::before,
.weui-cell__bd::after {
  content: "";
  display: table;
}
.weui-cell__bd::after {
  clear: both;
}
.weui-cell__bd .card {
  box-sizing: border-box;
  float: left;
  width: calc(100% - 150px);
  padding-right: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weui-cell__bd .amount {
  float: right;
  width: 150px;
}
.weui-cell__ft {
  float: right;
  width: 30px;
  padding-left: 0;
}