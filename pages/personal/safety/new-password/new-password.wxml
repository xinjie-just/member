<!--设置新密码-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__bd">
        <view class="weui-cells__title">设置新密码</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input type="{{newType}}" class="weui-input" placeholder="新登录密码，6-16位数字字母组合" />
                </view>
                <view class="weui-cell__ft">
                    <switch checked bindchange="switchType" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input type="{{confirmType}}" class="weui-input" placeholder="请再输入登录密码" />
                </view>
                <view class="weui-cell__ft">
                    <switch checked bindchange="switchConfirmType" />
                </view>
            </view>
        </view>
        <view class="weui-btn-area">
            <button class="weui-btn" type="warn" bindtap="showTopTips">提交</button>
        </view>
    </view>
</view>
